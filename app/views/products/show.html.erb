<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
      <h4>Reviews</h4>
        <% @product_review.each do |review| %>
        <dl class="dl-horizontal">
          <dt>Rating:</dt>
          <dd><%= review.rating %></dd>
          <dt>Description:</dt>
          <dd><%= review.description %></dd>
          <% if current_user && @current_user.id == review.user_id %>
          <dd><%= button_to "Delete", product_review_url(@product, review), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: "Are you sure?" } %></dd>
            <% end %>
        </dl>
        <% end %>
      </div>
    </div>

    <% if current_user %>
    <div class="row">
    <div class="col-sm-8">
      <h4>Add a review:</h4>
        <%= form_for [@product, @review] do |review_form| %>
            <dl class="dl-horizontal">
            <dt><%= review_form.label :description %></dt>
            <dd><%= review_form.text_field :description %></dd>

            <dt><%= review_form.label :rating %></dt>
            <dd><%= review_form.select :rating, ['1', '2', '3', '4', '5'] %></dd>
            <br>
            <dd><%= review_form.submit "Add review" %></dd>
        <% end %>
      </dl>
    </div>
    </div>
    <% end %>

  </article>

</section>
